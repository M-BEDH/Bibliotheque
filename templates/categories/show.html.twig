{% extends 'base.html.twig' %}
{% block stylesheets %}
           	<link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}

{% block title %}Détails de la catégorie{% endblock %}

{% block body %}
    <h1>Détails de la catégorie</h1>

    <table class="table bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
                <td>    <a class="btn btn-outline-warning" href="{{ path('app_categories_edit', {'id': category.id}) }}">Modifier</a>
                    <a onclick="return confirm('Etes-vous sûr de vouloir supprimer cette catégorie ?');" class="btn btn-outline-danger" href="{{ path('app_categories_delete', {'id': category.id}) }}">Supprimer</a>
                </td>
            </tr>
            <tr>
                <th>Nom de la categorie</th>
                <td>{{ category.name }}</td>
                <td></td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_categories_index') }}">Retour à la liste</a>

{% endblock %}
