{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block title %}Détails de l'auteur{% endblock %}

{% block body %}
    <h1>Détails de l'auteur</h1>

    <table class="table bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auteur.id }}</td>
                <td>
                    <a class="btn btn-outline-warning" href="{{ path('app_auteur_edit', {'id': auteur.id}) }}">modifier</a>
                    <a onclick="return confirm('Etes-vous sûr de vouloir supprimer cet auteur ?');" class="btn btn-outline-danger" href="{{ path('app_auteur_delete', {'id': auteur.id}) }}">supprimer</a>

                </td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ auteur.firstName }}</td>
                <td></td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ auteur.lastName }}</td>
                <td></td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ auteur.born ? auteur.born|date('Y-m-d') : '' }}</td>
                <td></td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-secondary" href="{{ path('app_auteur_index') }}">Retour à la liste</a>
{% endblock %}
