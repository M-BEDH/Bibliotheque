{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block title %}Liste livres{% endblock %}

{% block body %}

<div class="container">
    
    <h1>Liste des livres de {{ category.name }}</h1>
       <table class="table bordered">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Ann√©e de parution</th>
            <th>Auteur</th>
        </tr>
    </thead>
    <tbody>
        {% for book in category.books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.parution | date("Y") }}</td>
            
             <td>{{ book.autor.firstName }} {{ book.autor.lastName }}</td>

           
            </tr>
        {% endfor %}
       
    </tbody>
</table>

</div>
{% endblock %}